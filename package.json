{
  "name": "ts-project-generator",
  "private": true,
  "scripts": {
    "build": "npm run copy-files && npm run compile",
    "copy-files": "gulp CopyFiles",
    "compile": "tsc -b tsconfig.build.json",
    "rebuild": "npm run clean && npm run build",
    "watch": "concurrently --raw \"npm run copy-files -- --watch | dev-null\" \"npm run compile -- --watch\"",
    "clean": "npm run compile -- --clean && lerna run clean",
    "lint-base": "eslint --max-warnings 0 --ignore-pattern \"!.eslintrc.js\"",
    "lint-local": "npm run lint-base -- --ext .js,.jsx,.ts,.tsx .eslintrc.js",
    "lint-local-compact": "npm run lint-local -- -f compact || exit 0",
    "lint": "npm run lint-local && lerna run lint",
    "lint-compact": "npm run lint-local-compact && lerna run lint-compact",
    "test": "lerna run test",
    "version": "ts-node ./scripts/bumpVersion.ts",
    "prepare": "lerna bootstrap && npm run rebuild"
  },
  "devDependencies": {
    "@manuth/eslint-plugin-typescript": "^2.1.2",
    "@types/diff": "^4.0.2",
    "@types/fs-extra": "^9.0.1",
    "@types/glob": "^7.1.3",
    "@types/gulp": "^4.0.6",
    "@types/merge-stream": "^1.1.2",
    "@types/minimist": "^1.2.0",
    "@types/node": "^14.0.27",
    "@types/through2": "^2.0.36",
    "@types/vinyl": "^2.0.4",
    "@typescript-eslint/eslint-plugin": "^3.9.0",
    "@typescript-eslint/eslint-plugin-tslint": "^3.9.0",
    "@typescript-eslint/parser": "^3.9.0",
    "concurrently": "^5.3.0",
    "copy-and-watch": "^0.1.5",
    "dev-null-cli": "^1.0.0",
    "diff": "^4.0.2",
    "eslint": "^7.7.0",
    "eslint-plugin-import": "^2.22.0",
    "eslint-plugin-jsdoc": "^30.2.3",
    "fs-extra": "^9.0.1",
    "glob": "^7.1.6",
    "glob-exec": "^0.1.1",
    "gulp": "^4.0.2",
    "gulp-clone": "^2.0.1",
    "lerna": "^3.22.1",
    "merge-stream": "^2.0.0",
    "minimist": "^1.2.5",
    "through2": "^4.0.2",
    "ts-node": "^8.10.2",
    "tslint": "^6.1.3",
    "typescript": "^3.9.7",
    "upath": "^1.2.0",
    "vinyl": "^2.2.0"
  }
}
