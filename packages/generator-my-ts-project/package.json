{
  "name": "generator-my-ts-project",
  "version": "0.0.0",
  "description": "Generates TypeScript-Projects with custom additions",
  "author": "Manuel Thalmann <m@nuth.ch>",
  "keywords": [
    "yeoman-generator"
  ],
  "homepage": "https://github.com/manuth/TSGenerators#readme",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/manuth/TSGenerators.git",
    "directory": "packages/generator-my-ts-project"
  },
  "bugs": {
    "url": "https://github.com/manuth/TSGenerators/issues"
  },
  "scripts": {
    "build": "tsc -b tsconfig.build.json",
    "rebuild": "npm run clean && npm run build",
    "watch": "npm run build -- --watch",
    "clean": "tsc -b --clean && rimraf ./lib",
    "lint-base": "eslint --max-warnings 0 --ignore-pattern \"!.eslintrc.js\"",
    "lint": "npm run lint-base -- --ext .js,.jsx,.ts,.tsx ./src .eslintrc.js",
    "lint-compact": "npm run lint -- -f compact || exit 0",
    "test": "mocha",
    "prepare": "npm run rebuild"
  },
  "dependencies": {
    "@manuth/extended-yo-generator": "^6.0.0",
    "chalk": "^4.1.0",
    "dedent": "^0.7.0",
    "yosay": "^2.0.2"
  },
  "devDependencies": {
    "@manuth/eslint-plugin-typescript": "^2.1.2",
    "@manuth/tsconfig": "^1.2.2",
    "@types/dedent": "^0.7.0",
    "@types/mocha": "^8.0.2",
    "@types/node": "^14.0.27",
    "@types/yosay": "0.0.29",
    "@typescript-eslint/eslint-plugin": "^3.9.0",
    "@typescript-eslint/eslint-plugin-tslint": "^3.9.0",
    "@typescript-eslint/parser": "^3.9.0",
    "eslint": "^7.7.0",
    "eslint-plugin-import": "^2.22.0",
    "eslint-plugin-jsdoc": "^30.2.3",
    "mocha": "^8.1.1",
    "rimraf": "^3.0.2",
    "tslint": "^6.1.3",
    "typescript": "^3.9.7",
    "typescript-eslint-plugin": "^1.2.1",
    "yo": "^3.1.1"
  }
}
